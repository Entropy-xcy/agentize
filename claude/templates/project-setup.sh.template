#!/bin/bash
# ============================================================================
# ${PROJECT_NAME} - Environment Setup Script
# ============================================================================
# This file is generated by 'make env-script'
# Run: source setup.sh

echo "Setting up ${PROJECT_NAME} development environment..."

# Get the directory where this script is located
PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# ============================================================================
# PATH Configuration
# ============================================================================

# Add build binaries to PATH
if [ -d "$PROJECT_ROOT/build/bin" ]; then
    export PATH="$PROJECT_ROOT/build/bin:$PATH"
    echo "✓ Added build/bin to PATH"
fi

# TODO: Add other paths as needed
# export PATH="$PROJECT_ROOT/scripts:$PATH"
# export PATH="$PROJECT_ROOT/tools:$PATH"

# ============================================================================
# Language-Specific Setup
# ============================================================================

# Python
if [ -d "$PROJECT_ROOT/src" ]; then
    export PYTHONPATH="$PROJECT_ROOT/src:${PYTHONPATH:-}"
    echo "✓ Set PYTHONPATH"
fi

# Node.js
if [ -d "$PROJECT_ROOT/node_modules" ]; then
    export NODE_PATH="$PROJECT_ROOT/node_modules:${NODE_PATH:-}"
    echo "✓ Set NODE_PATH"
fi

# TODO: Add language-specific configuration
# Go
# export GOPATH="$PROJECT_ROOT"
# Rust
# export CARGO_HOME="$PROJECT_ROOT/.cargo"

# ============================================================================
# Project-Specific Environment Variables
# ============================================================================

export PROJECT_ROOT
echo "✓ Set PROJECT_ROOT=$PROJECT_ROOT"

# TODO: Add your project-specific environment variables
# export MY_VAR="value"
# export CONFIG_PATH="$PROJECT_ROOT/config"

# ============================================================================
# Tool Verification
# ============================================================================

# Check if required tools are available
check_tool() {
    if command -v "$1" &> /dev/null; then
        echo "✓ Found $1"
    else
        echo "⚠ Warning: $1 not found"
    fi
}

