{
  "permissions": {
    "allow": [
      "Bash(echo FILE OPERATIONS - Reading and viewing files)",
      "Read(//tmp/**)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "Bash(tee:*)",
      "Bash(awk:*)",
      "Bash(xargs ls:*)",

      "Bash(echo BUILD TOOLS - Compilation and build system)",
      "Bash(ninja:*)",
      "Bash(cmake:*)",
      "Bash(mkdir:*)",
      "Bash(make all:*)",
      "Bash(make env:*)",
      "Bash(make build:*)",
      "Bash(make check:*)",
      "Bash(make lint:*)",
      "Bash(make env:*)",
      "Bash(make setup:*)",
      "Bash(make test:*)",

      "Bash(echo DSA STACK TOOLS - Project-specific tools)",
      "Bash(dsa-cc:*)",
      "Bash(dsa-sim:*)",
      "Bash(dsa-hwgen:*)",
      "Bash(dsa-exp:*)",
      "Bash(dsa-mapper:*)",
      "Bash(./build/bin/dsa-cc:*)",
      "Bash(./build/bin/dsa-sim:*)",
      "Bash(./build/bin/dsa-hwgen:*)",
      "Bash(./build/bin/dsa-mapper:*)",
      "Bash(build/bin/dsa-cc:*)",
      "Bash(build/bin/dsa-hwgen:*)",
      "Bash(build/bin/dsa-mapper:*)",

      "Bash(echo DSA DEBUG VARIANTS - Debug builds and profiling)",
      "Bash(DSA_DEBUG=1 ./build/bin/dsa-cc:*)",
      "Bash(DSA_DEBUG=1 dsa-mapper:*)",
      "Bash(DSA_DEBUG=1 llvm-lit:*)",
      "Bash(DSA_DEBUG=1 dsa-hwgen:*)",
      "Bash(DSA_DEBUG=1 ninja:*)",
      "Bash(time dsa-mapper:*)",

      "Bash(echo LLVM/MLIR TOOLS - LLVM and MLIR infrastructure)",
      "Bash(mlir-opt:*)",
      "Bash(clang++:*)",
      "Bash(mlir-translate:*)",
      "Bash(lit:*)",
      "Bash(llvm-lit:*)",
      "Bash(FileCheck:*)",
      "Bash(./externals/llvm-project/build/bin/mlir-opt:*)",
      "Bash(./externals/llvm-project/build/bin/llvm-lit:*)",
      "Bash(./externals/llvm-project/build/bin/mlir-translate:*)",

      "Bash(echo LLVM DEBUG VARIANTS - LLVM debug builds)",
      "Bash(LLVM_DEBUG=1 ./build/bin/dsa-cc:*)",

      "Bash(echo ENVIRONMENT - Module system and runtime)",
      "Bash(module load:*)",
      "Bash(module load ./env/dsa-stack)",

      "Bash(echo SKILL - Agent skills)",
      "Skill(pr-templates)",
      "Skill(issue-templates)",

      "Bash(echo GIT READ OPERATIONS - Non-destructive git commands)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",

      "Bash(echo GITHUB READ OPERATIONS - Viewing GitHub resources)",
      "Bash(gh search:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh label list:*)",
      "Bash(gh project list:*)",
      "Bash(gh project field-list:*)",
      "Bash(gh project view:*)",
      "Bash(gh project item-list:*)"
    ],
    "deny": [
      "Bash(echo BAN cd command saves your token usage)", 
      "Bash(cd:*)",

      "Bash(echo DESTRUCTIVE OPERATIONS - Potentially dangerous commands)",
      "Bash(git reset:*)",
      "Bash(git restore:*)"
    ],
    "ask": [
      "Bash(echo GIT WRITE OPERATIONS - Modifying git state)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      
      "Bash(echo KIND OF TOO GENERAL COMMANDS)",
      "Bash(python3:*)",
      "Bash(test:*)",

      "Bash(echo GITHUB WRITE OPERATIONS - Creating/modifying GitHub resources)",
      "Bash(gh project field-create:*)",
      "Bash(gh project item-add:*)",
      "Bash(gh api:*)",
      "Bash(gh issue create:*)",
      "Bash(gh project item-edit:*)",
      "Bash(gh pr create:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-init.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit.sh"
          }
        ]
      }
    ]
  }
}
